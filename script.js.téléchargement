var anim = false;
$(window).scroll(function(){ 
	if ($(this).scrollTop() > 100) { 
		if ($(this).scrollTop() > 300 && anim==false) { 
     		$(".determinate").css("-webkit-animation-play-state", "running");
     		anim = true;
		}
		$('#scroll').fadeIn(); 
	} else { 
		$('#scroll').fadeOut(); 
	}
}); 
function loopscrool(){ 
	$("html, body").animate({ scrollTop: 0 }, 600);
};
function loopdown(id){
	$("html, body").animate({ scrollTop: document.getElementById(id).offsetTop-90 }, 600);
	$('.sidenav').sidenav('close');
}
function showconfig() {
	$('.config').show();
}
function check () {
	if (document.getElementById("darkcheck").checked == true){
		$('body').each(function (id, elem) {
			elem.classList.add("grey");
			elem.classList.add("darken-4");
		});
		$('.black-text').each(function (id, elem) {
			elem.classList.add("white-text");
		});
		$('.card').each(function (id, elem) {
			elem.classList.add("grey");
			elem.classList.add("darken-3");
		});
	} else {
		$('body').each(function (id, elem) {
			elem.classList.remove("grey");
			elem.classList.remove("darken-4");
		});
		$('.black-text').each(function (id, elem) {
			elem.classList.remove("white-text");
		});
		$('.card').each(function (id, elem) {
			elem.classList.remove("grey");
			elem.classList.remove("darken-3");
		});
	}
}